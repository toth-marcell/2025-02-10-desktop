<Window x:Class="_2025_02_10_desktop.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025_02_10_desktop"
        mc:Ignorable="d"
        Title="EditWindow" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="10">
        <Label FontSize="14" Content="{Binding id}" ContentStringFormat="Edit person with id {0}"/>
        <Label>Name</Label>
        <TextBox x:Name="nameField" Text="{Binding name}"/>
        <Label>Age</Label>
        <TextBox x:Name="ageField" Text="{Binding age}"/>
        <Button Grid.Column="2" Margin="0,10" x:Name="cancelButton" Click="cancelButton_Click">Cancel</Button>
        <Button Grid.Column="2" x:Name="saveButton" Click="saveButton_Click">Save</Button>
    </StackPanel>
</Window>
